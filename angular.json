{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "fire-d": {
            "root": "",
            "sourceRoot": "src/main/webapp",
            "projectType": "application",
            "architect": {}
        },
        "styles": [
            "node_modules/@nebular/theme/styles/prebuilt/cosmic.css",
            "node_modules/bootstrap-css-only/css/bootstrap.min.css",
            "node_modules/font-awesome/css/font-awesome.css", // optional
            "node_modules/ionicons/css/ionicons.css", // optional
            "node_modules/admin-lte-css/dist/css/AdminLTE.css",
            "node_modules/admin-lte-css/dist/css/skins/_all-skins.css"
        ],
        "scripts": ["../node_modules/jquery/dist/jquery.min.js", "../node_modules/bootstrap/dist/js/bootstrap.js"]
    },
    "defaultProject": "fire-d",
    "cli": {
        "packageManager": "npm"
    },
    "schematics": {
        "@schematics/angular:component": {
            "inlineStyle": true,
            "inlineTemplate": false,
            "spec": false,
            "prefix": "jhi",
            "styleExt": "scss"
        },
        "@schematics/angular:directive": {
            "spec": false,
            "prefix": "jhi"
        },
        "@schematics/angular:guard": {
            "spec": false
        },
        "@schematics/angular:pipe": {
            "spec": false
        },
        "@schematics/angular:service": {
            "spec": false
        }
    }
}
